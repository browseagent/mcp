{
  "name": "@browseagent/mcp",
  "version": "1.0.0",
  "description": "Browse Agent MCP Server enables AI applications to take control of your browser.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --inspect src/index.js",
    "lint": "eslint src/",
    "test": "node --test test/*.test.js",
    "test:connection": "node test/connection.test.js",
    "test:tools": "node test/tools.test.js",
    "test:all": "npm run test:connection && npm run test:tools",
    "test:watch": "node --test --watch test/*.test.js"
  },
  "bin": {
    "browseragent-mcp": "./src/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "claude-desktop",
    "vs-code",
    "cursor",
    "chrome-extension"
  ],
  "author": "David Oti",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/browseagent/mcp.git"
  },
  "bugs": {
    "url": "https://github.com/browseagent/mcp/issues"
  },
  "homepage": "https://github.com/browseagent/mcp#readme"
